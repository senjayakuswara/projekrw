rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // WARNING: Aturan ini mengizinkan siapa saja untuk membaca dan menulis
    // ke koleksi 'keluarga'. Ini diperlukan karena aplikasi belum memiliki
    // sistem autentikasi pengguna yang aman. Untuk aplikasi produksi,
    // sangat disarankan untuk mengimplementasikan Firebase Authentication dan
    // membatasi akses hanya untuk pengguna yang terautentikasi.
    // Contoh: allow read, write: if request.auth != null;

    // Izinkan akses baca dan tulis penuh ke koleksi 'keluarga'
    // dan semua sub-koleksinya (seperti 'anggota').
    match /keluarga/{document=**} {
      allow read, write: if true;
    }
  }
}
